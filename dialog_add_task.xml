<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/edit_expense_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:inputType="text"
        android:maxLines="1"
        android:hint="Enter expense name" />

    <TextView
        android:id="@+id/tv_expense_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Added Date: None"
        android:layout_below="@id/edit_expense_name"
        />




    <CalendarView
        android:id="@+id/cv_expense_date"
        android:layout_below="@id/tv_expense_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>