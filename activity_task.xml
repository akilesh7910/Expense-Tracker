<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/task_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:textSize="30sp"
        android:layout_toStartOf="@id/btn_add2"
        android:layout_toLeftOf="@id/btn_add2"
        />

    <Button
        android:id="@+id/btn_add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="4dp"
        android:text="ADD" />
    <TextView
        android:id="@+id/expense_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_list_name"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="Expense_Count"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/SD_Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense_count"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="S/D_Count"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/lv_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SD_Count"
        android:padding="10dp" />


</RelativeLayout>